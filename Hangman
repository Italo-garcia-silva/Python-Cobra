import random

# Lista de palavras para o jogo
word_list = ["python", "developer", "hangman", "challenge", "terminal", "function"]

# Escolhe uma palavra aleatÃ³ria da lista
secret_word = random.choice(word_list).lower()
guessed_letters = []
attempts = 6

print("ğŸ® Welcome to Hangman!")
print("_ " * len(secret_word))

# -----------------------------
# CÃ³digo criado por Ãtalo Garcia ğŸ‘¨â€ğŸ’»
# -----------------------------

while attempts > 0:
    guess = input("\nGuess a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("âŒ Please enter a single valid letter.")
        continue

    if guess in guessed_letters:
        print("âš ï¸ You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in secret_word:
        print("âœ… Good guess!")
    else:
        attempts -= 1
        print(f"âŒ Wrong! You have {attempts} attempts left.")

    # Exibe o progresso atual da palavra
    display_word = [letter if letter in guessed_letters else "_" for letter in secret_word]
    print(" ".join(display_word))

    if "_" not in display_word:
        print("\nğŸ‰ Congratulations, you won!")
        break
else:
    print(f"\nğŸ’€ Game Over! The word was: {secret_word}")
